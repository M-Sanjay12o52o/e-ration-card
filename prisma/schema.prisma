generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:e-ration-card/db/data.db"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  number   String  @unique
  name     String?
  password String?
}

model Hub {
  id             String @id @default(uuid())
  name           String @unique
  address        String @unique
  vehicleNumber  String @unique
  superVisorName String
  contact        String @unique
}

